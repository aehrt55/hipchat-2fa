{
  "key": "tenten-authy",
  "name": "Tenten Authy",
  "description": "Tenten authy integration with Hipchat",
  "vendor": {
    "name": "Tenten Creative",
    "url": "https://tenten.co"
  },
  "links": {
    "self": "{{localBaseUrl}}/atlassian-connect.json",
    "homepage": "{{localBaseUrl}}"
  },
  "capabilities": {
    "hipchatApiConsumer": {
      "scopes": [
        "send_notification",
        "view_room"
      ]
    },
    "installable": {
      "callbackUrl": "{{localBaseUrl}}/installable"
    },
    "configurable": {
      "url": "{{localBaseUrl}}/config"
    },
    "webhook": {
      "url": "{{localBaseUrl}}/webhook",
      "pattern": "^/authy",
      "event": "room_message",
      "name": "Hello!",
      "authentication": "jwt"
    },
    "dialog": [
      {
        "key": "sample.dialog",
        "title": {
          "value": "Key List"
        },
        "url": "{{localBaseUrl}}/dialog",
        "options": {
          "style": "normal",
          "size": {
            "width": "400px",
            "height": "200px"
          }
        }
      }
    ],
    "action": [
      {
        "key": "sample.action",
        "name": {
          "value": "list keys"
        },
        "target": "sample.dialog",
        "location": "hipchat.input.action"
      }
    ]
  }
}
